  def atualizar_legcoins(saldo, valor, operacao="+"):
    if operacao == "+":
        novo_saldo = saldo + valor
    else:
        novo_saldo = saldo - valor
    if novo_saldo < 0:
        print("Saldo insuficiente!")
        return saldo
    return novo_saldo
